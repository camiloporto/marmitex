<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >
    
    <Button android:id="@+id/cardapio_opcao_item_list_removeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_alignParentRight="true"
        android:text="Delete"/>
    
    <Button android:id="@+id/cardapio_opcao_item_list_editButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_toLeftOf="@id/cardapio_opcao_item_list_removeButton"
        android:text="Edit"/>
    
    <Button android:id="@+id/cardapio_opcao_item_list_saveButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:visibility="invisible"
        android:layout_toLeftOf="@id/cardapio_opcao_item_list_removeButton"
        android:text="Save"/>
    
	<TextView android:id="@+id/cardapio_opcao_item_list_descricao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:visibility="invisible"
        android:inputType="text"
        android:hint="opcao"/>
	
	<EditText android:id="@+id/cardapio_opcao_item_list_descricao_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:inputType="text"
        android:enabled="false"
        android:hint="opcao"/>
    
</RelativeLayout>